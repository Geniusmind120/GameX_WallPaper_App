<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/listed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:mrl_rippleAlpha="0.2"
        android:id="@+id/clicker"
        android:clickable="true"
        android:focusable="true"
        ads:mrl_rippleColor="@color/colorPrimary"
        ads:mrl_rippleHover="true"
        ads:mrl_rippleOverlay="true"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:cardCornerRadius="7dp"
            ads:cardElevation="5dp"
            android:layout_margin="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <ProgressBar android:id="@+id/progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminateTint="@android:color/black"
                        android:layout_centerInParent="true"
                        style="?android:attr/progressBarStyleSmall"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="0dp"
                        android:layout_alignParentBottom="true">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_thumbnail"
                            android:scaleType="centerCrop"
                            android:contentDescription="IMage"/>





                    </FrameLayout>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </com.balysv.materialripple.MaterialRippleLayout>

    <TextView android:textSize="14sp"
        android:textColor="@color/black"
        android:id="@+id/name"
        android:background="@color/white"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5" android:text="test"
        android:fontFamily="@font/poppins_medium"/>
</LinearLayout>